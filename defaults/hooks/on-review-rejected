#!/bin/bash
#
# on-review-rejected - Triggered when review rejects changes
#
# Pings the implementer to address feedback.
#
# Environment:
#   WIGGUM_TICKET_ID    - The ticket ID
#   WIGGUM_TICKET_PATH  - Full path to ticket file
#   WIGGUM_PREV_STATE   - Previous state (review)
#   WIGGUM_NEW_STATE    - New state (implement)
#   WIGGUM_AGENT_ID     - Agent that triggered transition (reviewer)
#   WIGGUM_SESSION      - tmux session name
#

TICKET_ID="${1:-$WIGGUM_TICKET_ID}"

echo "[hook] Review rejected for $TICKET_ID"

# Get the assigned implementer agent
IMPL_AGENT=$(grep 'assigned_agent_id:' "$WIGGUM_TICKET_PATH" | awk '{print $2}')

# Ping the implementer if still running
if [[ -n "$IMPL_AGENT" ]]; then
    wiggum ping "$IMPL_AGENT" "Review feedback added to your ticket. Please address and re-submit." 2>/dev/null || true
fi
